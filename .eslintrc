{
  "parser": "babel-eslint",
  "plugins": [
    "prettier"
  ],
  "env": {
    "node": true
  },
  "extends": "eslint:recommended",
  "rules": {
    "prettier/prettier": ["error", {
      "singleQuote": true,
      "trailingComma": "all",
      "bracketSpacing": true,
      "jsxBracketSameLine": false,
      "parser": "flow"
    }]
  }
}